<%- include("header") -%>
      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-body">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h4>Edit Task</h4>
                  </div>
                  <div class="card-body">
                    <form action="/edit-task/<%= task._id %>" method="post">
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Task Name</label>
                          <div class="col-sm-12 col-md-7">
                            <input type="text" class="form-control" name="taskName" value="<%= task.taskName %>" required>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Assign Date</label>
                          <div class="col-sm-12 col-md-7">
                            <input type="date" class="form-control" name="assignDate" value="<%= task.assignDate.toISOString().split('T')[0] %>" required>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Due Date</label>
                          <div class="col-sm-12 col-md-7">
                            <input type="date" class="form-control" name="dueDate" value="<%= task.dueDate.toISOString().split('T')[0] %>" required>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Priority</label>
                          <div class="col-sm-12 col-md-7">
                            <select class="form-control selectric" name="priority" required>
                                <option value="High" <%= task.priority === 'High' ? 'selected' : '' %>>High</option>
                                <option value="Average" <%= task.priority === 'Average' ? 'selected' : '' %>>Average</option>
                                <option value="Low" <%= task.priority === 'Low' ? 'selected' : '' %>>Low</option>                            
                            </select>
                          </div>
                        </div>
                        <div class="form-group row mb-4">
                          <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                          <div class="col-sm-12 col-md-7">
                            <button type="submit" class="btn btn-primary">Edit Task</button>
                          </div>
                        </div>
                      </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
<%- include("footer") -%>